<div class="flex justify-between flex-1">
  <div class="flex flex-col">
    <div>
      <h1 class="font-bold text-4xl">User#show</h1>
      <p>Find me in app/views/user/show.html.erb</p>
    </div>

    <div>
      <% @posts.each do |post| %>
        <%= link_to post.title, post_path(post.id) %>
      <% end %>
    </div>
  </div>

  <% if current_user.present? %>
    <div>
      <p style="color: green"><%= notice %></p>

      <p>Signed as <%= Current.user.email %></p>

      <div>
        <%= link_to "Change email address", edit_identity_email_path %>
      </div>

      <div>
        <%= link_to "Change password", edit_password_path %>
      </div>

      <div>
        <%= link_to "Devices & Sessions", sessions_path %>
      </div>

      <div>
        <%# link_to "Activity Log", authentications_events_path %>
      </div>

      <div>
        <%# link_to "Two-Factor Authentication", new_two_factor_authentication_totp_path %>
      </div>

      <%= button_to "Log out", Current.session, method: :delete %>
    </div>
  <% end %>
</div>
